set backspace=2
set tags=tags;
set shiftwidth=4
" Num of spaces in tab when editing
set softtabstop=4
" Tabs are spaces
set expandtab
" Auto indents to previous line
set autoindent
" Sets max amount of characters per line
set textwidth=80
" Show line numbers
set number
" visual autocomplete for command menu
set wildmenu
" highlight matching [{()}]
set showmatch
" search as characters are entered
set incsearch
" highlight matches
set hlsearch
" turn off seach highlights
nnoremap <leader><space> :nohlsearch<CR>
